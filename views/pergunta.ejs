<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs')%>
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label>Resposta:</label>
      <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea><br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn estilo-btn2">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <div class="dataformatada"><%= pergunta.updatedAt %></div>
            <p style="font-size: 20px;"><%= resposta.corpo %></p>
        </div>
      </div>
      <br>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>
